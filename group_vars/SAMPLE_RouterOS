ansible_ssh_user: user_name # имя пользователя RouterOS
ansible_ssh_password: this_is_my_very_secure_password_with_full_rights # пароль пользователя RouterOS права должны быть full
ansible_network_os: routeros
backup_path: SAMPLE_devices # указывается подкаталог, в который будут помещены резервные копии группы (если не указать - будет создан каталог ungrouped)
telegram_chat_id: group_chat_id # указывается ID группы в Telegram
telegram_message_thread_id: message_thread_id # указывается ID топика в Telegram
telegram_bot_token: bot_token_here # указывается Telegram Bot Token
