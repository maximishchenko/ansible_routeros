out_root_dir: ../out # Backups and exports root storage, optional. If missing, ../out will be used.
group_dir: Contoso # Subfolder inside out_root_dir, optional. Can be used for grouping. If missing, "ungrouped" will be used
retention_days: 3d # Backup archive retention, optional. If missing, 7d will be used
